{
  "extends": ["@prezly/eslint-config/stylelint", "stylelint-config-tailwindcss"],
  "rules": {
    "selector-class-pattern": null,
    "scss/at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["tailwind", "apply", "layer"]
      }
    ],
    "media-feature-range-notation": "prefix"
  }
}
